<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mykotlinm.devlanding.com.workoutnotebook.CreateNewWorkout.CreateNewWorkoutFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TextInputEditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/workoutTitle"
        android:hint="Workout Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/workoutDescription"
        android:layout_width="368dp"
        android:hint="Workout Description"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/workoutTitle" />
</android.support.constraint.ConstraintLayout>
